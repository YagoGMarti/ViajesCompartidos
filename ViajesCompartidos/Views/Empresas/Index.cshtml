@model IEnumerable<SistemaViajesCompartidos.Models.EmpresaModel>

@{
    ViewBag.Title = "Empresas";
}

<div class="form-group">
    <div class="col-lg-3">
        <h2>Empresas</h2>
    </div>
    <div class="col-lg-1 col-lg-offset-8">
        <a class="btn btn-default buttonOffset15 botonCentrado" href="@Url.Action("Crear", "Empresas")">Crear &raquo;</a>
    </div>
</div>

<table class="table">
    <tr>
        <th class="col-lg-3 text-center">
            @Html.DisplayNameFor(model => model.RazonSocial)
        </th>
        <th class="col-lg-1 text-center">
            @Html.DisplayNameFor(model => model.CUIT)
        </th>
        <th class="col-lg-2 text-center">
            @Html.DisplayNameFor(model => model.TipoEmpresa)
        </th>
        <th class="col-lg-1 text-center">
            @Html.DisplayNameFor(model => model.FechaAlta)
        </th>
        <th class="col-lg-1 text-center">
            @Html.DisplayNameFor(model => model.Activo)
        </th>
        <th class="col-lg-4"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.RazonSocial)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.CUIT)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.TipoEmpresa)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.FechaAlta)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.Activo)
            </td>
            <th class="text-center">
                @Html.ActionLink("Sucursales", "Index", "Sucursales", new { EmpresaID = item.ID }, new { }) |
                @Html.ActionLink("Empleados", "Index", "Empleados", new { EmpresaID = item.ID }, new { }) |
                @Html.ActionLink("Editar", "Editar", new { ID = item.ID }) |
                @if (item.Activo == true)
                {
                    @Html.ActionLink("Desactivar", "Desactivar", new { ID = item.ID }, new { onclick = "return confirm('¿Desea marcar la empresa como INACTIVA?');" })
                }
                else
                {
                    @Html.ActionLink("Activar", "Activar", new { ID = item.ID }, new { onclick = "return confirm('¿Desea marcar la empresa como ACTIVA?');" })
                }
            </th>
        </tr>
    }

</table>
