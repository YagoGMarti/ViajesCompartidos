@model IEnumerable<SistemaViajesCompartidos.Models.EmpleadoModel>

@{
    ViewBag.Title = "Index";
}

<div class="form-group">
    <div class="col-lg-3">
        <h2>Empleados</h2>
    </div>
    <div class="col-lg-1 col-lg-offset-8">
        @if (ViewBag.EmpresaID != null || ViewBag.SucursalID != null)
        {
            <a class="btn btn-default buttonOffset15 botonCentrado" href="@Url.Action("Crear", "Empleados", new { EmpresaModel_ID = ViewBag.EmpresaID })">Crear &raquo;</a>
        }
    </div>
</div>

<table class="table">
    <tr>
        <th class="col-lg-1 text-center">
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th class="col-lg-2 text-center">
            @Html.DisplayNameFor(model => model.CorreoElectronico)
        </th>
        @*<th class="col-lg-2 text-center">
            @Html.DisplayNameFor(model => model.Roles)
        </th>*@
        <th class="col-lg-2 text-center">
            Sucursal
        </th>
        <th class="col-lg-1 text-center">
            @Html.DisplayNameFor(model => model.TieneVehiculo)
        </th>
        <th class="col-lg-1 text-center">
            @Html.DisplayNameFor(model => model.Activo)
        </th>
        <th class="col-lg-3 text-center"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.CorreoElectronico)
            </td>
            @*<td class="text-center">
                @Html.DisplayFor(modelItem => item.Roles)
            </td>*@

            <td class="text-center">
                @Html.DisplayFor(modelItem => item.Sucursal.Nombre)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.TieneVehiculo)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.Activo)
            </td>
            <th class="text-center">
                @Html.ActionLink("Editar", "Editar", new { ID = item.ID }) |
                @Html.ActionLink("Restablecer Clave", "RestablecerClave", new { ID = item.ID, EmpresaID = ViewBag.EmpresaID, SucursalID = ViewBag.SucursalID }, new { onclick = "return confirm('¿Enviar nueva clave por correo electrónico?');" }) |
                @if (item.Activo == true)
                {
                    @Html.ActionLink("Desactivar", "Desactivar", new { ID = item.ID, EmpresaID = ViewBag.EmpresaID, SucursalID = ViewBag.SucursalID }, new { onclick = "return confirm('¿Desea marcar la empresa como INACTIVA?');" })
                }
                else
                {
                    @Html.ActionLink("Activar", "Activar", new { ID = item.ID, EmpresaID = ViewBag.EmpresaID, SucursalID = ViewBag.SucursalID }, new { onclick = "return confirm('¿Desea marcar la empresa como ACTIVA?');" })
                }
            </th>
        </tr>
    }

</table>
